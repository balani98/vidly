@model IEnumerable<vidly.Models.Movie>
@{
    ViewBag.Title = "Random";
}


<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.name</td>
            </tr>
        }
    </tbody>
</table>
